<%= render 'designs/modal_add_design', design: @new_design %>
<%= render 'job_posts/modal_add_job_post', job_post: @new_job_post %>

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= homepage? ? "navbar-transparent fixed-top" : "sticky" %>">
  <%= link_to root_path, class: "navbar-brand" do %>
  <%= image_tag "logo.png" %>
  <%= link_to "DesignnHub", root_path, class: "mr-auto logo-name"%>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "COMMUNITY", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "GALLERY", designs_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "JOBS", job_posts_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "DESIGNERS", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag (asset_path('avatar-default.png')), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Profile", profile_path(current_user), class: "dropdown-item" %>
            <% if policy(Design).create? %>
              <a href="#" class="dropdown-item" data-toggle="modal" data-target="#designModal">
              Add Design
              </a>
            <% end %>
            <a href="#" class="dropdown-item" data-toggle="modal" data-target="#jobPostModal">
            Post Job
            </a>
            <%= link_to "Ask Question", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-sign-up" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
